{
    "name": "solution-forest/workflow-engine-core",
    "description": "Framework-agnostic workflow engine for PHP applications",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "workflow",
        "state-machine",
        "business-process",
        "automation",
        "php"
    ],
    "authors": [
        {
            "name": "Solution Forest",
            "email": "info@solutionforest.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "laravel/pint": "^1.22",
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "SolutionForest\\WorkflowEngine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SolutionForest\\WorkflowEngine\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "test:verbose": "pest --verbose",
        "analyze": "phpstan analyse",
        "pint": "pint",
        "pint:test": "pint --test",
        "quality": [
            "@pint",
            "@analyze",
            "@test"
        ],
        "ci": [
            "@pint:test",
            "@analyze",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "pestphp/pest-plugin-arch": true
        }
    }
}
