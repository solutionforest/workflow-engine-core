{
    "preset": "laravel",
    "rules": {
        "simplified_null_return": true,
        "not_operator_with_successor_space": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "php_unit_method_casing": {
            "case": "camel_case"
        },
        "phpdoc_align": {
            "align": "left"
        },
        "array_syntax": {
            "syntax": "short"
        }
    },
    "exclude": [
        "vendor",
        "build"
    ]
}
